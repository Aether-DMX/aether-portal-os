[Unit]
Description=AETHER DMX Touchscreen Frontend
After=network.target

[Service]
Type=simple
User=ramzt
WorkingDirectory=/home/ramzt/Aether-DMX/frontend
ExecStart=/usr/bin/npm run dev -- --host 0.0.0.0
Restart=always
RestartSec=3
Environment=NODE_ENV=development

[Install]
WantedBy=multi-user.target
